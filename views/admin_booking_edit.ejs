<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Edit Booking #<%= booking.id %></h1>
    <a href="/admin/bookings" class="btn btn-secondary">
      <i class="bi bi-arrow-left"></i> Back to Bookings
    </a>
  </div>

  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">Booking Details</h5>
    </div>
    <div class="card-body">
      <form method="POST" action="/admin/bookings/<%= booking.id %>/update">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-bold">Property</label>
              <p class="form-control-plaintext"><%= listing.title %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-bold">Guest Name</label>
              <p class="form-control-plaintext"><%= booking.name %></p>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-bold">Guest Email</label>
              <p class="form-control-plaintext"><%= booking.email %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-bold">Status</label>
              <select class="form-select" name="status" required>
                <option value="pending" <%= booking.status === 'pending' ? 'selected' : '' %>>Pending</option>
                <option value="approved" <%= booking.status === 'approved' ? 'selected' : '' %>>Approved</option>
                <option value="denied" <%= booking.status === 'denied' ? 'selected' : '' %>>Denied</option>
                <option value="cancelled" <%= booking.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
              </select>
            </div>
          </div>
        </div>

        <hr class="my-4">
        <h6 class="mb-3">Booking Dates</h6>

        <div class="row">
          <div class="col-md-3">
            <div class="mb-3">
              <label for="checkin_date" class="form-label">Check-in Date *</label>
              <input type="date" class="form-control" id="checkin_date" name="checkin_date" value="<%= booking.checkin.split(' ')[0] %>" required>
              <small class="text-muted">Original: <%= booking.checkin.split(' ')[0] %></small>
            </div>
          </div>
          <div class="col-md-3">
            <div class="mb-3">
              <label for="checkin_time" class="form-label">Check-in Time *</label>
              <input type="time" class="form-control" id="checkin_time" name="checkin_time" value="<%= booking.checkin.split(' ')[1] || '15:00' %>" required>
              <small class="text-muted">Original: <%= booking.checkin.split(' ')[1] || '15:00' %></small>
            </div>
          </div>
          <div class="col-md-3">
            <div class="mb-3">
              <label for="checkout_date" class="form-label">Check-out Date *</label>
              <input type="date" class="form-control" id="checkout_date" name="checkout_date" value="<%= booking.checkout.split(' ')[0] %>" required>
              <small class="text-muted">Original: <%= booking.checkout.split(' ')[0] %></small>
            </div>
          </div>
          <div class="col-md-3">
            <div class="mb-3">
              <label for="checkout_time" class="form-label">Check-out Time *</label>
              <input type="time" class="form-control" id="checkout_time" name="checkout_time" value="<%= booking.checkout.split(' ')[1] || '11:00' %>" required>
              <small class="text-muted">Original: <%= booking.checkout.split(' ')[1] || '11:00' %></small>
            </div>
          </div>
        </div>

        <div class="alert alert-info">
          <i class="bi bi-info-circle"></i> 
          <strong>Note:</strong> Changes to booking dates or status will trigger email notifications to the guest at <strong><%= booking.email %></strong>.
        </div>

        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Update Booking
          </button>
          <a href="/admin/bookings" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
          </a>
        </div>
      </form>
      
      <!-- Delete form outside main form -->
      <form method="POST" action="/admin/bookings/<%= booking.id %>/delete" class="mt-3" onsubmit="return confirm('Are you sure you want to permanently delete this booking? The customer will be notified via email.')">
        <button type="submit" class="btn btn-danger">
          <i class="bi bi-trash"></i> Delete Booking (Permanent)
        </button>
      </form>
    </div>
  </div>

  <div class="card mt-4">
    <div class="card-header">
      <h6 class="mb-0">Booking History</h6>
    </div>
    <div class="card-body">
      <p><strong>Created:</strong> <%= booking.created_at %></p>
      <p><strong>Current Status:</strong> 
        <% if (booking.status === 'approved') { %>
          <span class="badge bg-success">Approved</span>
        <% } else if (booking.status === 'denied') { %>
          <span class="badge bg-danger">Denied</span>
        <% } else if (booking.status === 'cancelled') { %>
          <span class="badge bg-secondary">Cancelled</span>
        <% } else { %>
          <span class="badge bg-warning text-dark">Pending</span>
        <% } %>
      </p>
    </div>
  </div>
</div>
