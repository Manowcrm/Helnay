<div class="container mt-4">
  <h1>Admin Dashboard</h1>
  
  <div class="row mt-4">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="bi bi-house-door fs-1 text-primary"></i>
          <h5 class="card-title mt-2">Listings</h5>
          <p class="card-text fs-3"><%= stats.listings %></p>
          <a href="/admin/listings" class="btn btn-primary">Manage</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="bi bi-calendar-check fs-1 text-success"></i>
          <h5 class="card-title mt-2">Bookings</h5>
          <p class="card-text fs-3"><%= stats.bookings %></p>
          <a href="/admin/bookings" class="btn btn-success">Manage</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="bi bi-people fs-1 text-info"></i>
          <h5 class="card-title mt-2">Users</h5>
          <p class="card-text fs-3"><%= stats.users %></p>
          <a href="/admin/users" class="btn btn-info">Manage</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="bi bi-envelope fs-1 text-warning"></i>
          <h5 class="card-title mt-2">Messages</h5>
          <p class="card-text fs-3"><%= stats.contacts %></p>
          <a href="/admin/contacts" class="btn btn-warning">View</a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5>Recent Activity</h5>
        </div>
        <div class="card-body">
          <h6>Pending Bookings: <%= stats.pendingBookings %></h6>
          <a href="/admin/bookings" class="btn btn-sm btn-primary">Review Pending</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
          <h5 class="mb-0"><i class="bi bi-sliders"></i> Homepage Customization</h5>
        </div>
        <div class="card-body">
          <p class="mb-3">Customize sidebar filters and browse categories</p>
          <a href="/admin/filters" class="btn btn-primary">
            <i class="bi bi-gear"></i> Customize Homepage
          </a>
        </div>
      </div>
    </div>
  </div>

  <% if (isSuperAdmin) { %>
    <div class="row mt-4">
      <div class="col-md-6">
        <div class="card border-danger">
          <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="bi bi-people-fill"></i> Admin Team Management</h5>
          </div>
          <div class="card-body">
            <p class="mb-3">Manage admin users, create sub-admins, and monitor their activities</p>
            <a href="/admin/team" class="btn btn-danger">
              <i class="bi bi-person-badge"></i> Manage Team
            </a>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="card border-info">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Activity Monitoring</h5>
          </div>
          <div class="card-body">
            <p class="mb-3">View detailed activity logs for all admin actions</p>
            <a href="/admin/activity" class="btn btn-info">
              <i class="bi bi-list-check"></i> View Activity Log
            </a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>
