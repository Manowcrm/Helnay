<div class="hero-banner">
  <div class="hero-overlay">
    <div class="container">
      <div class="hero-content text-center text-white">
        <h1 class="display-4 fw-bold mb-3">Find Your Perfect Stay</h1>
        <p class="lead mb-4">Discover amazing homes and experiences around the world</p>
        <form method="GET" class="search-box-large mx-auto">
          <div class="row g-2">
            <div class="col-md-4">
              <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input name="q" class="form-control" placeholder="Search destination or property" value="<%= (typeof query !== 'undefined' && query.q) ? query.q : '' %>">
              </div>
            </div>
            <div class="col-md-3">
              <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-geo-alt"></i></span>
                <input name="location" class="form-control" placeholder="Location" value="<%= (typeof query !== 'undefined' && query.location) ? query.location : '' %>">
              </div>
            </div>
            <div class="col-md-2">
              <input name="min_price" class="form-control" placeholder="Min $" type="number" min="0" value="<%= (typeof query !== 'undefined' && query.min_price) ? query.min_price : '' %>">
            </div>
            <div class="col-md-2">
              <input name="max_price" class="form-control" placeholder="Max $" type="number" min="0" value="<%= (typeof query !== 'undefined' && query.max_price) ? query.max_price : '' %>">
            </div>
            <div class="col-md-1 d-grid">
              <button class="btn btn-warning btn-lg"><i class="bi bi-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row mb-4">
    <div class="col-md-3 mb-3">
      <div class="quick-book-card text-center p-4">
        <i class="bi bi-house-door fs-1 text-primary mb-3"></i>
        <h5>Entire Homes</h5>
        <p class="text-muted small">Private places with room for everyone</p>
        <a href="/?q=" class="btn btn-sm btn-outline-primary">Explore</a>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="quick-book-card text-center p-4">
        <i class="bi bi-building fs-1 text-success mb-3"></i>
        <h5>City Stays</h5>
        <p class="text-muted small">Urban apartments near attractions</p>
        <a href="/?location=City" class="btn btn-sm btn-outline-success">Explore</a>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="quick-book-card text-center p-4">
        <i class="bi bi-water fs-1 text-info mb-3"></i>
        <h5>Beach Houses</h5>
        <p class="text-muted small">Seaside properties with ocean views</p>
        <a href="/?location=Seaside" class="btn btn-sm btn-outline-info">Explore</a>
      </div>
    </div>
    <div class="col-md-3 mb-3">
      <div class="quick-book-card text-center p-4">
        <i class="bi bi-tree fs-1 text-warning mb-3"></i>
        <h5>Mountain Retreats</h5>
        <p class="text-muted small">Cabins perfect for nature lovers</p>
        <a href="/?location=Highlands" class="btn btn-sm btn-outline-warning">Explore</a>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <h2 class="mb-4">Available Properties</h2>
  <div class="row">
  <% if (!listings || listings.length === 0) { %>
    <div class="col-12"><p>No listings found.</p></div>
  <% } %>
  <% listings.forEach(function(l){ %>
    <div class="col-md-4 mb-4">
      <div class="card listing-card h-100">
        <% if (l.image_url) { %>
          <div class="listing-img-wrapper">
            <img src="<%= l.image_url %>" class="card-img-top" alt="<%= l.title %>">
            <span class="badge badge-location"><i class="bi bi-geo-alt"></i> <%= l.location %></span>
          </div>
        <% } %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= l.title %></h5>
          <p class="card-text text-muted small mb-2">
            <i class="bi bi-house"></i> Entire property
          </p>
          <p class="card-text"><%= l.description.length > 100 ? l.description.substring(0,100) + '...' : l.description %></p>
          <div class="mt-auto">
            <hr>
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <strong class="text-primary fs-5">$<%= l.price %></strong>
                <small class="text-muted">/night</small>
              </div>
              <a href="/listings/<%= l.id %>" class="btn btn-primary">Book Now</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
  </div>
</div>
