<div class="container mt-4">
  <h1>Contact Messages</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Message</th>
        <th>Received</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% contacts.forEach(function(c){ %>
        <tr>
          <td><%= c.id %></td>
          <td><%= c.name %></td>
          <td><a href="mailto:<%= c.email %>"><%= c.email %></a></td>
          <td><%= c.message.substring(0, 50) %>...</td>
          <td><%= new Date(c.created_at).toLocaleDateString() %></td>
          <td>
            <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#messageModal<%= c.id %>">
              <i class="bi bi-eye"></i> View
            </button>
            <form method="POST" action="/admin/contacts/<%= c.id %>/delete" style="display:inline;">
              <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this message?')">
                <i class="bi bi-trash"></i>
              </button>
            </form>
          </td>
        </tr>
        
        <!-- Modal -->
        <div class="modal fade" id="messageModal<%= c.id %>" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Message from <%= c.name %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <p><strong>Email:</strong> <a href="mailto:<%= c.email %>"><%= c.email %></a></p>
                <p><strong>Date:</strong> <%= new Date(c.created_at).toLocaleString() %></p>
                <hr>
                <p><%= c.message %></p>
              </div>
              <div class="modal-footer">
                <a href="mailto:<%= c.email %>" class="btn btn-primary">Reply</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </tbody>
  </table>
</div>
